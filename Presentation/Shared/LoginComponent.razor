@inherits LoginComponentBase

<style>
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .admin-login-wrapper {
        background-color: #F3E5F5;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', sans-serif;
        animation: fadeIn 0.8s ease-out;
    }

    .login-card {
        background: white;
        border-radius: 24px !important;
        padding: 48px !important;
        width: 100%;
        max-width: 480px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.04) !important;
        border: 1px solid #E1BEE7 !important;
        animation: fadeInUp 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .brand-title {
        background: linear-gradient(135deg, #3F51B5 0%, #9C27B0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        font-size: 2.5rem;
        letter-spacing: -1.5px;
        margin-bottom: 4px;
        text-align: center;
    }

    .brand-subtitle {
        color: #7B1FA2;
        font-size: 1rem;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 500;
        opacity: 0.8;
    }

    .input-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #4A148C;
        margin-bottom: 8px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modern-text-field {
        margin-bottom: 24px;
    }

    .modern-text-field .mud-input-outlined-border {
        border-color: #E1BEE7 !important;
        border-radius: 12px !important;
        transition: border-color 0.3s ease;
    }

    .modern-text-field:focus-within .mud-input-outlined-border {
        border-color: #9C27B0 !important;
        border-width: 2px !important;
    }

    .login-button {
        background: linear-gradient(135deg, #3F51B5 0%, #9C27B0 100%) !important;
        color: white !important;
        border-radius: 12px !important;
        padding: 14px !important;
        font-weight: 600 !important;
        text-transform: none !important;
        font-size: 1rem !important;
        box-shadow: 0 4px 12px rgba(156, 39, 176, 0.2) !important;
        margin-top: 16px !important;
        transition: all 0.3s ease !important;
    }

    .login-button:hover {
        opacity: 0.95;
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(156, 39, 176, 0.3) !important;
    }

    .login-button:active {
        transform: translateY(0);
    }
</style>

<div class="admin-login-wrapper">
    <MudItem xs="11" sm="8" md="6" lg="4">
        <MudPaper Class="login-card" Elevation="0">
            <div class="brand-title">CampusConnect</div>
            <div class="brand-subtitle">Administrator Access Portal</div>

            <MudStack Spacing="1">
                <div>
                    <span class="input-label">Email</span>
                    <MudTextField 
                        @onkeydown="HandleKeyDown" 
                        @bind-Value="username"  
                        Variant="Variant.Outlined" 
                        Margin="Margin.Normal"
                        Placeholder="Enter your email"
                        Class="modern-text-field"
                        Adornment="Adornment.End"
                        AdornmentIcon="@Icons.Material.Filled.Email"
                        AdornmentColor="Color.Primary" />
                </div>

                <div>
                    <span class="input-label">Password</span>
                    <MudTextField 
                        @onkeydown="HandleKeyDown" 
                        @bind-Value="password" 
                        Variant="Variant.Outlined"
                        InputType="@PasswordInput" 
                        Margin="Margin.Normal"
                        Placeholder="••••••••"
                        Class="modern-text-field"
                        Adornment="Adornment.End" 
                        AdornmentIcon="@PasswordInputIcon" 
                        OnAdornmentClick="ShowPassword" 
                        AdornmentAriaLabel="Show Password" />
                </div>

                <MudButton 
                    Class="login-button"
                    Variant="Variant.Filled" 
                    Size="Size.Large" 
                    FullWidth="true"
                    OnClick="Login">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Color="Color.Inherit" Indeterminate="true" Class="mr-2" />
                        <span>Verifying...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </MudButton>
            </MudStack>
        </MudPaper>
        
        <MudText Typo="Typo.caption" Align="Align.Center" Class="d-block mt-8" Style="color: #7B1FA2;">
            &copy; @DateTime.Now.Year CampusConnect. System for Internal Administration.
        </MudText>
    </MudItem>
</div>

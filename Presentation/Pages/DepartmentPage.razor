@page "/departments"

<PageTitle>CamCon | Departments</PageTitle>

<MudTable Class="standard-table mt-1" Items="DepartmentList" Hover Bordered Striped FixedFooter Dense Filter="new Func<DepartmentModel, bool>(FilterFunction)">
    <ColGroup>
        <col style="width: 30%;"/>
        <col/>
        <col style="width: 1%;"/>
    </ColGroup>
    <ToolBarContent>
        <MudText Typo="Typo.h6">Departments</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudIconButton OnClick="() => OpenDialog(Enums.Action.Create, new())" Icon="@Icons.Material.Filled.Add"></MudIconButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@context.DepartmentId</MudTd>
        <MudTd DataLabel="Sign">@context.DepartmentName</MudTd>
        <MudTd>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert" AnchorOrigin="Origin.TopLeft" TransformOrigin="Origin.TopRight" Dense>
                <MudMenuItem Icon="@Icons.Material.Filled.Edit" Label="Edit"/>
                <MudMenuItem Icon="@Icons.Material.Filled.Delete" Label="Delete" />
            </MudMenu>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager/>
    </PagerContent>
</MudTable>


@code {
    private List<DepartmentModel> DepartmentList = new();

    private string searchString = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        DepartmentList = await _departmentService.GetAllDepartmentsAsync();
    }

    private bool FilterFunction(DepartmentModel element) => FilterFunction(element, searchString);

    private bool FilterFunction(DepartmentModel element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.DepartmentName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private async Task OpenDialog(Enums.Action action, DepartmentModel dept)
    {
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        var parameters = new DialogParameters();
        parameters.Add("Action", action);
        parameters.Add("Model", dept);

        var dialog = await _dialogService.ShowAsync<CreateDepartmentDialog>();

        var result = await dialog.Result;

        if(result is not null)
            if(!result.Canceled)
            {
                await OnInitializedAsync();
            }
    }
}

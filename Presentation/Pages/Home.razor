@page "/"

@using Presentation.Shared.Dialogs

<PageTitle>CamCon | Dashboard</PageTitle>

<MudGrid Class="px-16">
    <MudItem xs="4">    
        <ActionComponent Title="Create Organization Page" Description="Create Organization Page" OnClick="OpenOrg" IsCreate></ActionComponent>
    </MudItem>
    <MudItem xs="4">
        <ActionComponent Title="View Newsfeed" Description="World" OnClick="(s) => Navigate(s, true)"></ActionComponent>
    </MudItem>
    <MudItem xs="4">
        <ActionComponent Title="Monitor and Manage" Description="World" OnClick="(s) => Navigate(s, true)"></ActionComponent>
    </MudItem>
    <MudItem xs="4">
        <ActionComponent Title="Department/ Organization" Description="World" OnClick="(s) => Navigate(s, true)"></ActionComponent>
    </MudItem>
    <MudItem xs="4">
        <ActionComponent Title="Page Request Admin" Description="World" OnClick="(s) => Navigate(s, true)"></ActionComponent>
    </MudItem>
    <MudItem xs="4">
        <ActionComponent Title="Users" Description="World" OnClick="(s) => Navigate(s, true)"></ActionComponent>
    </MudItem>
</MudGrid>

@code {

    private void Navigate(string redirect, bool isPage)
    {
        _navigationManager.NavigateTo($"/{redirect}");
    }
    private async Task OpenOrg()
    {
        var dialog = await _dialogService.ShowAsync<CreateOrganizationDialog>("Create Organization");
        var result = await dialog.Result;
    }
}